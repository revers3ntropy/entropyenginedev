{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "module": "es6",
        "target": "es5",
        "lib": ["es2018", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noEmit": false,
        "removeComments": true,
        "typeRoots": [
            "./types/types.d.ts",
            "./node_modules/@types",
            "./node_modules/@types/matter-js/index.d.ts"
        ]
    },
    "exclude": ["node_modules"]
}